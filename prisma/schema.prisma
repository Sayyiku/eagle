generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Image {
  id                String   @id
  name              String
  size              Int
  btime             BigInt
  mtime             BigInt
  ext               String
  folders           String
  url               String
  annotation        String
  modificationTime  BigInt
  width             Int
  height            Int
  star              Int?
  palettes          String?
  lastModified      BigInt
  isDeleted         Boolean?
  deletedTime       BigInt?
  processingPalette Boolean?
  noThumbnail       Boolean?
  tags              Tag[]
}

model Tag {
  id         String       @id
  name       String
  starred    Boolean      @default(false)
  tagsGroups TagsGroups[]
  images     Image[]
}

model Folder {
  id               String  @id
  name             String
  description      String
  pid              String?
  modificationTime BigInt
  tags             String
  iconColor        String?
  password         String
  passwordTips     String
}

model TagsGroups {
  id    String  @id
  name  String
  color String?
  Tag   Tag[]
}
