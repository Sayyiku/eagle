generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Image {
  id                String   @id
  name              String
  size              Int
  btime             String
  mtime             String
  ext               String
  tags              String
  folders           String
  url               String
  annotation        String
  modificationTime  String
  width             Int
  height            Int
  palettes          String
  lastModified      String
  isDeleted         Boolean?
  deletedTime       String?
  processingPalette Boolean?
}

model Folder {
  id               String  @id
  name             String
  description      String
  // 父级id
  pid              String?
  modificationTime String
  tags             String
  iconColor        String?
  password         String
  passwordTips     String
}

model Tag {
  id      String  @id
  name    String
  // 是否为常用
  starred Boolean @default(false)
}
