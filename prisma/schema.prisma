generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Image {
  id                String   @id
  name              String
  size              Int
  btime             BigInt
  mtime             BigInt
  ext               String
  tags              String
  folders           String
  url               String
  annotation        String
  modificationTime  BigInt
  width             Int
  height            Int
  star              Int?
  palettes          String
  lastModified      BigInt
  isDeleted         Boolean?
  deletedTime       BigInt?
  processingPalette Boolean?
  noThumbnail       Boolean?
}

model Folder {
  id               String  @id
  name             String
  description      String
  // 父级id
  pid              String?
  modificationTime BigInt
  tags             String
  iconColor        String?
  password         String
  passwordTips     String
}

model Tag {
  id      String  @id
  name    String
  // 是否为常用
  starred Boolean @default(false)
}
